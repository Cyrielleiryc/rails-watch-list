<div class="container">
  <div class="container pt-2 mt-2">
    <h2>Choose the movies to be added to "<strong><%= @list.name %></strong>"</h2>
    <%= simple_form_for [@list, @bookmark] do |f| %>
      <%= f.association :movie, collection: @movies %>
      <%= f.input :comment %>
      <%= f.button :submit, class: "btn btn-flat" %>
    <% end %>
  </div>
</div>
