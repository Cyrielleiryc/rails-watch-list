<% banner_img = "https://images.unsplash.com/photo-1535016120720-40c646be5580?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1170&q=80" %>
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= banner_img %>');">
      <div class="container">
        <h1 class="text-white">My Super Watch List</h1>
        <p>Quick access to the movies you need to watch later... </p>
        <button type="button" class="btn btn-flat" data-bs-toggle="modal" data-bs-target="#newList">
          Add a list
        </button>
      </div>
    </div>
</div>
<div class="container mt-3">
  <div class="cards">
    <% @lists.each do |list| %>
      <%= link_to list_path(list), class:"card_title_index" do %>
        <% if list.photo.attached? %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, crop: :fill %>')">
            <%= list.name %>
          </div>
          <% else %>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= image_path "light_bg.png" %>')">
            <%= list.name %>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>


<!-- Modal -->
<div class="modal fade" id="newList" tabindex="-1" aria-labelledby="newList" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newListLabel">Add a list</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= simple_form_for @list do |f| %>
          <%= f.input :name %>
          <%= f.input :photo, as: :file %>
      </div>
      <div class="modal-footer">
          <%= f.button :submit, class: "btn btn-flat" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
